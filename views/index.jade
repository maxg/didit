extends layout

append head
  title Didit

block content
  div.span3
    include sidebar
  div.span9
    div.page-header
      h1 Didit

    if authstaff
      h2= projects.length > 0 ? 'All projects' : 'No projects'
      each project in projects
        h3: a(href="/#{project.kind}/#{project.proj}") #{project.kind}/#{project.proj}
      each unstarted in unstartedProjects
        h3: a(class="text-warning", href="/#{unstarted.kind}/#{unstarted.proj}") #{unstarted.kind}/#{unstarted.proj}
      br

    h2= repos.length > 0 ? 'My repositories' : 'No repositories'
    each repo in repos
      h3: a(href="/#{repo.kind}/#{repo.proj}/#{repo.users.join('-')}").
        #{repo.kind}/#{repo.proj} #{repo.users.join('-')}

    if newAssignments.length > 0
      h2 New assignments
      each project in newAssignments
        h3: a(href="/#{project.kind}/#{project.proj}").
          #{project.kind}/#{project.proj}
